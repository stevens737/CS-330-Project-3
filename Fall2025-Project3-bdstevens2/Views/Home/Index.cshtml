@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="color: #F5C518;">Welcome to MovieDB</h1>

    <p style="font-size: 1.2rem; color: #adbac7; max-width: 600px; margin: 20px auto;">
        This is your personal database for movies and actors.
        Use the links in the navigation bar to browse, create, and edit entries.
        Check out the details for any movie or actor to see AI-generated reviews and social media buzz!
    </p>

    <div style="margin-top: 40px;">
        <a class="btn btn-primary btn-lg" asp-controller="Movies" asp-action="Index">Browse Movies</a>
        <a class="btn btn-secondary btn-lg" asp-controller="Actors" asp-action="Index" style="margin-left: 15px;">Browse Actors</a>
    </div>
</div>