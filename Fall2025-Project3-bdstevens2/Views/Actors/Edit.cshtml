@model Fall2025_Project3_bdstevens2.ViewModels.ActorEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImdbUrl" class="control-label"></label>
                <input asp-for="ImdbUrl" class="form-control" />
                <span asp-validation-for="ImdbUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Photo</label><br />
                @if (Model.ExistingPhoto != null)
                {
                    string imageBase64 = Convert.ToBase64String(Model.ExistingPhoto);
                    string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                    <img src="@imageSrc" alt="Current Photo" style="max-width: 200px; margin-bottom: 10px;" />
                }
                else
                {
                    <p>No photo available.</p>
                }
            </div>

            <div class="form-group">
                <label asp-for="PhotoFile" class="control-label"></label>
                <input asp-for="PhotoFile" class="form-control" type="file" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
                <span class="form-text text-muted">Leave blank to keep the current photo.</span>
            </div>

            <div class="form-group" style="margin-top: 15px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
