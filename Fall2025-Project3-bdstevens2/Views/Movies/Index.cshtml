@model IEnumerable<Fall2025_Project3_bdstevens2.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}
<h1>Movies</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table datatable">
    <thead>
        <tr>
            <th>
                Poster
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Poster != null)
                    {
                        string imageBase64 = Convert.ToBase64String(item.Poster);
                        string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                        <img src="@imageSrc" alt="Movie Poster" style="max-height: 100px;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>

                <td>
                    <a class="btn-action btn-action-edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn-action btn-action-details" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn-action btn-action-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>