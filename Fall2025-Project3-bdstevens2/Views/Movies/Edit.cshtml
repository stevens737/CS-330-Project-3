@model Fall2025_Project3_bdstevens2.ViewModels.MovieEditViewModel

@{
    ViewData["Title"] = "Edit Movie";
}

<h1>Edit Movie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImdbUrl" class="control-label"></label>
                <input asp-for="ImdbUrl" class="form-control" />
                <span asp-validation-for="ImdbUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Current Poster</label><br />
                @if (Model.ExistingPoster != null)
                {
                    string imageBase64 = Convert.ToBase64String(Model.ExistingPoster);
                    string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                    <img src="@imageSrc" alt="Current Poster" style="max-width: 200px; margin-bottom: 10px;" />
                }
                else
                {
                    <p>No poster available.</p>
                }
            </div>

            <div class="form-group mb-3">
                <label asp-for="PosterFile" class="control-label"></label>
                <br />
                <label for="PosterFile" class="btn-gold-file">Choose New File</label>
                <input asp-for="PosterFile" class="input-file-hidden" type="file" />
                <span asp-validation-for="PosterFile" class="text-danger"></span>
                <span class="form-text" style="color: #adbac7 !important;">Leave blank to keep current poster.</span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 15px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}